{
	"compilerOptions": {
		"experimentalDecorators": true,
		"outDir": "./lib/",
		"sourceMap": true,
		"declaration": true,
		"noImplicitAny": false,
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "es2015"
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}
